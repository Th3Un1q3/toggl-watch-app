<svg viewport-fill="fb-black">
  <link rel="stylesheet" href="entries-log.css" />
  <link rel="import" href="/mnt/sysassets/widgets_common.gui" />
  <link rel="import" href="/mnt/sysassets/widgets/baseview_widget.gui" />
  <link rel="import" href="/mnt/sysassets/widgets/panoramaview_widget.gui" />
  <link rel="import" href="/mnt/sysassets/widgets/pagination_dots.gui" />
  <link rel="import" href="/mnt/sysassets/widgets/tile_list_widget.gui" />

  <defs>
    <symbol id="time-entry-item" href="#tile-list-item" focusable="true"
            pointer-events="visible" system-events="all" display="none">

      <rect id="wrapper" class="item-wrapper item-wrapper--hidden">
        <rect id="background" class="item__background" />
        <section class="item__content-container">
          <text id="description" class="item__description">--------------------------------------------------------------------</text>
          <text id="project" class="item__project">---------------------------------------------------------------------</text>
          <section class="item__entry-properties">
            <text id="billable" class="item__billing">$</text>
            <text class="entry-properties__separator">â€¢</text>

            <text id="duration" class="item__duration">00:00:00</text>

            <line class="bottom-line"/>
          </section>
        </section>
        <image class="item__control-icon" href="./resources/images/fitbit_icons/btn_combo_play_p.png" />
      </rect>
    </symbol>
  </defs>

  <use id="view-switch" href="#panoramaview">
    <use id="entries-list-view" href="#panoramaview-item">
      <use id="time-entries-list-container" class="time-entry-list" href="#tile-list">
        <var id="virtual" value="1" />
        <var id="separator-height-bottom" value="2" />

        <use id="time-entry" href="#tile-list-pool">
          <use id="time-entry[0]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[1]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[2]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[3]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[4]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[5]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[6]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[7]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[8]" href="#time-entry-item" class="time-entry-list__item" />
          <use id="time-entry[9]" href="#time-entry-item" class="time-entry-list__item" />
        </use>
      </use>
    </use>

    <use id="current-entry-view" href="#panoramaview-item">
      <text>Current entry</text>
    </use>

    <use id="active-screen-indication" href="#pagination-widget">
      <use href="#pagination-dot" />
      <use href="#pagination-dot" />
      <use href="#pagination-highlight-dot" />
    </use>
  </use>
</svg>
